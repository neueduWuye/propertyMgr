	<mvc:annotation-driven/>
	
	<!-- 自动扫描controller包下的所有类，使其认为spring mvc的控制器 -->
	<context:component-scan base-package="com.hrsb.project.controller" />
	<context:component-scan base-package="com.hrsb.project.dto" />
	
	
